{
  "manifest_version": 3,
  "name": "Website Code Extractor",
  "version": "1.2",
  "description": "A Chrome extension that extracts website code (HTML, CSS, JS, images) and packages it into a ZIP file.",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting",
    "storage",
    "tabs"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon48.png",
        "icons/icon96.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
